<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

   <persistence-unit name="LaboratorioPersistenceUnit" transaction-type="JTA">
      <!-- ðŸ‘‡ Esto debe coincidir con el JNDI Name del datasource que creaste -->
      <jta-data-source>java:/jdbc/PrestadorDS</jta-data-source>

      <properties>
         <!-- Dialecto de PostgreSQL -->
         <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>

         <!-- Crea/actualiza las tablas segÃºn las entidades -->
         <property name="jakarta.persistence.schema-generation.database.action" value="update"/>

         <!-- Mostrar las consultas SQL en consola -->
         <property name="hibernate.show_sql" value="true"/>
         <property name="hibernate.format_sql" value="true"/>
      </properties>
   </persistence-unit>
</persistence>
